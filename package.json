{
  "name": "house_in_the_cloud",
  "version": "1.0.0",
  "description": "A smart home ecosystem for developers who want to customize everything",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run start:dev",
    "prod": "npm run start:prod",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "sudo node server.js production",
    "start:dev": "concurrently \"nodemon server.js\" \"npm run client\"",
    "server:prod": "sudo node server.js production",
    "main": "sudo node server.js",
    "satellite": "sudo node satellite.js",
    "client": "cd client && npm run serve",
    "client:prod": "cd client && npm run prod",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "prestart": "node ./.scripts/prestart.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^4.1.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "socket.io": "^2.2.0",
    "socket.io-client": "^2.2.0",
    "vue-socket.io": "^3.0.5",
    "vuetify": "^1.5.5"
  },
  "devDependencies": {
    "vue-cli-plugin-vuetify": "^0.4.6"
  }
}